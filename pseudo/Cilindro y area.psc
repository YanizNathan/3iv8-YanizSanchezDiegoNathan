Algoritmo area
	radio <- 0
	altura <- 0
	are <- 0
	vol <- 0
	Escribir 'Escribe el radio del circulo'
	Leer radio
	Escribir 'Escribe la altura del cilindro'
	Leer altura
	are <- pi*radio^2
	vol <- are*altura
	Escribir 'El area del circulo es: ',are
	Escribir 'El volumen del cilindro es: ',vol
FinAlgoritmo
